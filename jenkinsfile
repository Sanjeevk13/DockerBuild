pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
		powershell "& .\\build.ps1 -t JenkinsBuild"
                echo 'Build finished'
            }
        }
    }
        
        
 post {
        success{
            
            echo 'Build successful'
        }
        failure {
            echo 'Build failed'
            slackSend color: 'bad', message: 'your GoRewards Web build has failed'
        }
    }
}
